<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.establishment.EstablishmentDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_back" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/iv_est_image"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/empty_text_view"
                android:layout_marginEnd="10dp"
                android:text="123 Main St, Anytown,"
                android:textColor="@color/disable_text_color"
                android:layout_toStartOf="@id/tv_location"
                android:layout_below="@id/iv_est_image"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/empty_text_view"
                android:text="Bishkek"
                android:textColor="@color/disable_text_color"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/iv_est_image"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                style="@style/text_view_title"
                android:text="Navat"
                android:layout_toEndOf="@id/iv_est_image"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/empty_text_view"
                android:text="Navat is popular peice"
                android:layout_below="@id/tv_location"/>

            <TextView
                android:id="@+id/tv_title_happy_hours_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/empty_text_view"
                android:text="Happy hours time at: "
                android:layout_below="@id/tv_desc"/>

            <TextView
                android:id="@+id/tv_title_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/disable_text_color"
                style="@style/empty_text_view"
                android:text="Contacts:"
                android:layout_below="@id/tv_title_happy_hours_time"/>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/empty_text_view"
                android:text="+996 709 764 829"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_title_happy_hours_time"/>

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/empty_text_view"
                android:text="menu"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_title_contacts"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_beverages_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_menu"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_beverage"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>