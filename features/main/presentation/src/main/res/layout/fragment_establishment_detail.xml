<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.establishment.EstablishmentDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_back" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/iv_est_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/empty_text_view"
                android:layout_marginEnd="10dp"
                android:text="123 Main St, Anytown,"
                android:textColor="@color/disable_text_color"
                android:layout_toLeftOf="@id/tv_location"
                android:layout_below="@id/iv_est_image"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/empty_text_view"
                android:text="Bishkek"
                android:textColor="@color/disable_text_color"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/iv_est_image"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/text_view_title"
                android:text="Navat"
                android:layout_below="@id/tv_location"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/empty_text_view"
                android:text="Navat is popular peice"
                android:layout_below="@id/tv_name"/>

            <TextView
                android:id="@+id/tv_title_happy_hours_time_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/empty_text_view"
                android:text="Happy hours time at: "
                android:layout_below="@id/tv_desc"/>

            <TextView
                android:id="@+id/tv_happy_hours_time_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/text_view_title"
                android:text="19:00"
                android:layout_toEndOf="@id/tv_title_happy_hours_time_at"
                android:layout_below="@id/tv_desc"/>

            <TextView
                android:id="@+id/tv_title_happy_hours_time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                style="@style/empty_text_view"
                android:text="to: "
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_happy_hours_time_at"
                android:layout_below="@id/tv_desc"/>

            <TextView
                android:id="@+id/tv_happy_hours_time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/text_view_title"
                android:text="20:00"
                android:layout_toEndOf="@id/tv_title_happy_hours_time_to"
                android:layout_below="@id/tv_desc"/>

            <TextView
                android:id="@+id/tv_title_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/disable_text_color"
                style="@style/empty_text_view"
                android:text="Contacts:"
                android:layout_below="@id/tv_happy_hours_time_to"/>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/empty_text_view"
                android:text="+996 709 764 829"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_happy_hours_time_to"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/empty_text_view"
                android:text="ramazanmarov@gmail.com"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_phone_number"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                style="@style/enable_button"
                android:text="Menu"
                android:textSize="26sp"
                android:src="@drawable/ic_order_history"
                android:layout_below="@id/tv_email"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>