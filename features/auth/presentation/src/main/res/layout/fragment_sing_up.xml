<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.regist.SingUpFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_back"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/create_client"
                android:textColor=""
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout_name"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                app:prefixTextColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_enter_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_for_edit_text"
                    android:hint="Full Name"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout_birth"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_layout_name"
                android:layout_marginHorizontal="20dp"
                android:textSize="16sp"
                app:prefixTextColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_enter_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_for_edit_text"
                    android:hint="Day of birth"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout_email"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_layout_birth"
                android:layout_marginHorizontal="20dp"
                android:textSize="16sp"
                app:prefixTextColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_enter_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_for_edit_text"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--            <com.google.android.material.textfield.TextInputLayout-->
            <!--                android:id="@+id/et_layout_login"-->
            <!--                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@id/et_layout_email"-->
            <!--                android:layout_marginHorizontal="20dp"-->
            <!--                android:textSize="16sp"-->
            <!--                app:prefixTextColor="@color/black">-->

            <!--                <com.google.android.material.textfield.TextInputEditText-->
            <!--                    android:id="@+id/et_enter_login"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:background="@drawable/background_for_edit_text"-->
            <!--                    android:hint="Придумайте логин"-->
            <!--                    android:inputType="textMultiLine" />-->
            <!--            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout_pass"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_layout_email"
                android:layout_marginHorizontal="20dp"
                android:textSize="16sp"
                app:counterMaxLength="15"
                app:endIconMode="password_toggle"
                app:prefixTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_for_edit_text"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_valids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_layout_pass"
                android:layout_marginHorizontal="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pass_valid_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="От 8 до 15 символов" />

                <TextView
                    android:id="@+id/tv_pass_valid_up_low_case"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Строчные и прописные буквы" />

                <TextView
                    android:id="@+id/tv_pass_valid_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Минимум 1 цифра" />

                <TextView
                    android:id="@+id/tv_pass_valid_symbols"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Минимум 1 спецсимвол (!, #, $...)" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_layout_repass"
                style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_valids"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                app:counterMaxLength="15"
                app:endIconMode="password_toggle"
                app:prefixTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_re_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_for_edit_text"
                    android:hint="Confirm Password"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/et_layout_repass"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="20dp"
                android:background=""
                android:text="@string/next"
                android:elevation="4dp"
                android:textColor="@color/color_primary"
                android:textSize="16sp" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>